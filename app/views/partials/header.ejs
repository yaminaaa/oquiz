<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Reset CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <!-- Really beautiful CSS -->
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/floating-labels.css" rel="stylesheet">

    <title>O'quiz</title>
</head>

<body>
    <header
        class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-primary text-white border-bottom shadow-sm">
        <h1 class="h5 my-0 mr-md-auto font-weight-normal"><a class="menubar-link" href="/">O'quiz</a></h1>
        <nav class="my-2 my-md-0 mr-md-3">
            <a class="p-2 text-white" href="/">Accueil</a>
            <a class="p-2 text-white" href="/tags">Sujets</a>

            <% if( !locals.user ) { %> 
                <a class="p-2 text-white" href="/signup">S'inscrire</a>
                <a class="p-2 text-white" href="/login">Se connecter</a>
            <% } %>
            <% if( locals.user ) { %>
                <span class="p-2 text-wite"><%= locals.user.firstname %> <%= locals.user.lastname %></span>
                <% if( locals.user.role === 'admin') { %> 
                    <a class="p-2 text-white" href="/admin/dashboard">Admin</a>
                <% } %>
                <a class="p-2 text-white" href="/logout">Se Deconnecter</a>
            <% } %> 
        </nav>
    </header>
    <main class="container">